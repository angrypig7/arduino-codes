void SPI_Init( void )
{
    /*IO config*/
    PORTB |= ( 1<<3 ) | ( 1<<5 ) | ( 1<<2 );
    DDRB |= ( 1<<3 ) | ( 1<<5 ) | ( 1<<2 ) | ( 1<<4 );
    DDRB &= ~( 1<<4 );
    SPCR = (1<<SPE) | (1<<MSTR);
}


